{
  "compilerOptions": {
    "target": "es2016" or "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules"
  ]
}
